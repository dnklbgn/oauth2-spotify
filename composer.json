{
  "name": "dnklbgn/oauth2-spotify",
  "description": "Spotify OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
  "license": "MIT",
  "authors": [
    {
      "name": "Nikolay Kuzmin",
      "email": "cool.baklazhan@gmail.com"
    }
  ],
  "keywords": [
    "oauth",
    "oauth2",
    "client",
    "authorization",
    "authorisation",
    "spotify",
    "php"
  ],
  "require": {
    "php": ">=8.3",
    "league/oauth2-client": "2.7.*"
  },
  "require-dev": {
    "phpunit/phpunit": "10.*"
  },
  "autoload": {
    "psr-4": {
      "Dnklbgn\\OAuth2\\Client\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dnklbgn\\OAuth2\\Client\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit --coverage-text --coverage-clover build/coverage.xml"
  }
}
